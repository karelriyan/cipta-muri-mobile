<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setor.bank.BankSampahActivity">

    <!-- Background Layers -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_blur_gradient" />

    <!-- Konten utama -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="90dp"> <!-- supaya tidak ketimpa bottom bar -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="20dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bank Sampah"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="35dp" />
            </LinearLayout>

            <!-- Peta -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp">

                <WebView
                    android:id="@+id/webViewMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <!-- Info Bank Sampah -->
            <TextView
                android:id="@+id/tvNamaBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Bank Sampah Sahabatku"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Jarak dari pengguna -->
            <TextView
                android:id="@+id/tvJarak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Menghitung jarak..."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Tombol Lihat Jadwal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="16dp">

<!--                <TextView-->
<!--                    android:id="@+id/btnLihatJadwal"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="#6ABF4B"-->
<!--                    android:text="Lihat Jadwal"-->
<!--                    android:textSize="18sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@android:color/white"-->
<!--                    android:gravity="center"-->
<!--                    android:paddingVertical="14dp"-->
<!--                    android:clickable="true"-->
<!--                    android:focusable="true" />-->
            </androidx.cardview.widget.CardView>

            <!-- Tombol Bagikan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/btnBagikan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_outline_blue"
                    android:text="Bagikan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0077B6"
                    android:gravity="center"
                    android:paddingVertical="14dp"
                    android:clickable="true"
                    android:focusable="true" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- BottomAppBar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        android:backgroundTint="@android:color/white"
        app:elevation="8dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconTint="@null"
            app:menu="@menu/bottom_navigation_menu" />
    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- Floating Action Button (Scan QR) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr_nav"
        app:tint="@null"
        app:maxImageSize="70dp"
        app:layout_anchor="@id/bottom_app_bar"
        android:contentDescription="Scan QR" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
