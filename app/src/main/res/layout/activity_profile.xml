<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".ui.profile.ProfileActivity">

    <!-- Konten utama yang bisa di-scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Bagian Profil -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="100dp"
                    app:cardCornerRadius="60dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:id="@+id/iv_profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/avatar"
                        android:contentDescription="Foto Profil" />
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/iv_edit_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="@drawable/ic_launcher_background"
                    android:padding="6dp"
                    android:contentDescription="Ubah Foto" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sudrajat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <!-- Daftar Tombol Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profil"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:strokeColor="#E0E0E0"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textAlignment="textStart"
                    android:text="Ubah Pin"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:strokeColor="#E0E0E0"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textAlignment="textStart"
                    android:text="Panduan Aplikasi"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:strokeColor="#E0E0E0"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textAlignment="textStart"
                    android:text="Tentang Kami"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:strokeColor="#E0E0E0"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_logout"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textAlignment="textStart"
                    android:text="Logout Akun"
                    android:textColor="@android:color/holo_red_dark"
                    app:backgroundTint="#FFCDD2"
                    app:strokeColor="#FFCDD2"
                    app:cornerRadius="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BottomAppBar dan FAB yang sama dengan halaman utama -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        android:backgroundTint="@android:color/white"
        app:elevation="8dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:menu="@menu/bottom_navigation_menu"
            app:selectedItemId="@+id/navigation_profile" /> <!-- [PERBAIKAN] Nama file menu diganti ke 'bottom_app_bar_menu' -->

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr_nav"
        app:layout_anchor="@id/bottom_app_bar"
        android:contentDescription="Scan QR" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

