<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mutasi.MutasiSaldoActivity">

    <!-- Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="60dp"
                    android:paddingBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/btnBack"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_back"
                            android:contentDescription="Back"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saldo Rekening Saat Ini"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSaldoTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 110.000,00"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Content Area with White Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_top_white_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mutasi Saldo"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/btnSearch"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_search"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="Search" />

                        <ImageView
                            android:id="@+id/btnFilter"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_filter"
                            android:contentDescription="Filter" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnJanuari"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Januari"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnFebruari"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Februari"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMaret"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Maret"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnApril"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="April"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMei"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Mei"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnJuni"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Juni"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnJuli"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Juli"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAgustus"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Agustus"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSeptember"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="September"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnOktober"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Oktober"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnNovember"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="November"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:layout_marginEnd="8dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDesember"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Desember"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#DDDDDD"
                                app:strokeWidth="1dp"
                                app:cornerRadius="20dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="20dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMutasiSaldo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="400dp"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_mutasi_saldo" />

                    <TextView
                        android:id="@+id/tvTampilkanLebihBanyak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tampilkan Lebih Banyak"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="16dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>