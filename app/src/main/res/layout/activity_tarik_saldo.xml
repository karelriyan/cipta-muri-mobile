<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.saldo.tarik.TarikSaldoActivity">

    <!-- Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient2" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="60dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_back"
                        android:contentDescription="Back"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tarik Saldo"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="35dp" />
                </LinearLayout>

                <!-- Content Area with White Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_top_white_bg"
                    android:padding="20dp">

                    <!-- Sumber Dana Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sumber Dana"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Saldo Rekening Card -->
                    <FrameLayout
                        android:id="@+id/card_saldo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/saldo_card">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="125dp"
                                android:layout_height="83.33dp"
                                android:layout_gravity="top|end"
                                android:scaleType="centerCrop"
                                android:contentDescription="Decoration" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Saldo Rekening"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_account_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3210123456******"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:id="@+id/tv_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 110.000,00"
                                    android:textColor="@android:color/black"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp">

                                    <!-- Cek mutasi -->
                                    <TextView
                                        android:id="@+id/tv_check_mutation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cek mutasi >"
                                        android:textColor="#CCCCCC"
                                        android:textSize="12sp"
                                        android:layout_alignParentEnd="true" />
                                </RelativeLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </FrameLayout>

                    <!-- Isi Nominal Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi Nominal"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Input Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_atm"
                            android:contentDescription="ATM Icon"
                            android:layout_marginEnd="12dp" />

                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Rp"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLines="1" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"
                        android:layout_marginBottom="20dp" />

                    <!-- Pilih Nominal Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Nominal"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Amount Buttons Grid -->
                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_10k"
                            android:layout_width="0dp"
                            app:backgroundTint="@null"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Rp 10.000,00"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_20k"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            app:backgroundTint="@null"
                            android:layout_weight="1"
                            android:text="Rp 20.000,00"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_30k"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            app:backgroundTint="@null"
                            android:text="Rp 30.000,00"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_40k"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Rp 40.000,00"
                            android:textColor="#666666"
                            app:backgroundTint="@null"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_50k"
                            android:layout_width="0dp"
                            app:backgroundTint="@null"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Rp 50.000,00"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_100k"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            app:backgroundTint="@null"
                            android:layout_weight="1"
                            android:text="Rp 100.000,00"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_150k"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Rp 150.000,00"
                            app:backgroundTint="@null"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_amount_200k"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            app:backgroundTint="@null"
                            android:layout_weight="1"
                            android:text="Rp 200.000,00"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:background="@drawable/bg_amount_button"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Lihat Petunjuk -->
                    <TextView
                        android:id="@+id/tv_see_instructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Petunjuk"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Lanjutkan Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_continue"
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:text="Lanjutkan"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="#6366F1"
                        app:cornerRadius="8dp"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>