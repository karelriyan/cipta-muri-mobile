<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.leaderboard.LeaderboardActivity">

    <!-- Bagian yang bisa di-scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/main_bg"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Main Background" />

            <!-- Konten utama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="70dp">

                    <!-- Tombol Kembali -->
                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"
                        app:tint="@android:color/white"
                        android:contentDescription="Kembali" />

                    <!-- Judul di tengah -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Leaderboard"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp" />

                    <!-- Placeholder untuk menjaga keseimbangan layout -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                </LinearLayout>

                <!-- Podium Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <!-- Podium Peringkat 2 (Kiri) -->
                    <LinearLayout
                        android:id="@+id/podium_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_podium_side_left"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="24dp"
                        android:paddingBottom="16dp"
                        android:layout_marginEnd="-2dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="2dp"
                            android:src="@drawable/avatar" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="-16dp"
                            android:contentDescription="Juara 2 Badge"
                            android:elevation="10dp"
                            android:src="@drawable/ic_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:text="Rifky Prakoso"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_point_leaderboard"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:text="1847" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:text="RT. 03/RW. 04" />
                    </LinearLayout>

                    <!-- Podium Peringkat 1 (Tengah) -->
                    <LinearLayout
                        android:id="@+id/podium_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:background="@drawable/bg_podium_center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="32dp"
                        android:paddingBottom="24dp"
                        android:elevation="2dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="-2dp"
                        android:layout_marginEnd="-2dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="-7dp"
                            android:contentDescription="Juara 1"
                            android:elevation="10dp"
                            android:src="@drawable/ic_crown" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:civ_border_color="#FFD700"
                            app:civ_border_width="3dp"
                            android:src="@drawable/avatar" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="-16dp"
                            android:contentDescription="Juara 1 Badge"
                            android:elevation="10dp"
                            android:src="@drawable/ic_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Sudrajat" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_point_leaderboard"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:text="2430" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="11sp"
                            android:text="RT. 03/RW. 04" />
                    </LinearLayout>

                    <!-- Podium Peringkat 3 (Kanan) -->
                    <LinearLayout
                        android:id="@+id/podium_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_podium_side_right"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="24dp"
                        android:paddingBottom="16dp"
                        android:layout_marginStart="-2dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="2dp"
                            android:src="@drawable/avatar" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="-16dp"
                            android:contentDescription="Juara 3 Badge"
                            android:elevation="10dp"
                            android:src="@drawable/ic_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:text="Karel Riyan" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_point_leaderboard"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:text="1674" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:text="RT. 03/RW. 04" />
                    </LinearLayout>

                </LinearLayout>

                <!-- White container untuk daftar peringkat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_top_white_bg"
                    android:padding="16dp">

                    <!-- Judul Daftar Peringkat -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daftar Peringkat"
                        android:paddingTop="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- RecyclerView untuk daftar peringkat -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_leaderboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_leaderboard_rank"
                        tools:itemCount="6" />


                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BottomAppBar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        android:backgroundTint="@android:color/white"
        app:elevation="8dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconTint="@null"
            app:menu="@menu/bottom_navigation_menu" />
    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- FAB QR -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr_nav"
        app:tint="@null"
        app:maxImageSize="70dp"
        app:layout_anchor="@id/bottom_app_bar"
        android:contentDescription="Scan QR" />

    <!-- FAB Leaderboard -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_leaderboard"
        app:tint="@null"
        app:maxImageSize="70dp"
        android:contentDescription="Leaderboard" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>