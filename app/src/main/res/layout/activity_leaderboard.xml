<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    tools:context=".ui.leaderboard.LeaderboardActivity">

    <!-- Toolbar Kustom -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <!-- Menggunakan RelativeLayout agar judul bisa pas di tengah -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tombol Kembali di paling kiri -->
            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Kembali" />

            <!-- Judul di tengah-tengah parent (RelativeLayout) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaderboard"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Podium Peringkat 1-3 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="48dp">

        <!-- Podium Peringkat 2 (Kiri) -->
        <!-- Lebar diatur 30% dari layar, menempel ke kiri -->
        <LinearLayout
            android:id="@+id/podium_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_podium_side_left"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.33">

            <!-- [ANDA DISINI] Ganti dengan avatar peringkat 2 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:src="@tools:sample/avatars"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="-16dp"
                android:contentDescription="Juara 2 Badge"
                android:elevation="10dp"
                android:src="@drawable/ic_2" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Rifky Prakoso"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!-- [ANDA DISINI] Ganti dengan ikon poin Anda -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="4dp"
                    tools:src="@drawable/ic_point_leaderboard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="1847" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                tools:text="RT. 03/RW. 04" />
        </LinearLayout>

        <!-- Podium Peringkat 3 (Kanan) -->
        <!-- Lebar diatur 30% dari layar, menempel ke kanan -->
        <LinearLayout
            android:id="@+id/podium_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_podium_side_right"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.33">

            <!-- [ANDA DISINI] Ganti dengan avatar peringkat 3 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:src="@tools:sample/avatars"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="-16dp"
                android:contentDescription="Juara 3 Badge"
                android:elevation="10dp"
                android:src="@drawable/ic_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Karel Riyan"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!-- [ANDA DISINI] Ganti dengan ikon poin Anda -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="4dp"
                    tools:src="@drawable/ic_point_leaderboard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="1674" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                tools:text="RT. 03/RW. 04" />
        </LinearLayout>


        <!-- Podium Peringkat 1 (Tengah) -->
        <!-- Lebar diatur untuk mengisi sisa ruang antara podium 2 dan 3 -->
        <LinearLayout
            android:id="@+id/podium_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_podium_center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="24dp"
            app:layout_constraintEnd_toStartOf="@+id/podium_3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/podium_2"
            app:layout_constraintTop_toTopOf="parent">

            <!-- [ANDA DISINI] Ganti dengan ikon mahkota -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="-7dp"
                android:contentDescription="Juara 1"
                android:elevation="10dp"
                android:src="@drawable/ic_crown" />

            <!-- [ANDA DISINI] Ganti dengan avatar peringkat 1 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_color="#FFD700"
                app:civ_border_width="3dp"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="-16dp"
                android:contentDescription="Juara 1 Badge"
                android:elevation="10dp"
                android:src="@drawable/ic_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                tools:text="Sudrajat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!-- [ANDA DISINI] Ganti dengan ikon poin Anda -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="4dp"
                    tools:src="@drawable/ic_point_leaderboard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="2430" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                tools:text="RT. 03/RW. 04" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container Putih untuk Daftar Peringkat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_top_white_bg"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <!-- Idealnya ini menggunakan RecyclerView, ini hanya contoh 1 item -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_leaderboard_rank"
            tools:itemCount="6"
            />

    </LinearLayout>

</LinearLayout>

